<link href="http://fonts.googleapis.com/earlyaccess/nanumpenscript.css" rel="stylesheet">
<style>
.topnav{
    width: 100%;
    height: 104px;
    background-image: url('/images/bg/woodBg.jpg');
    background-size: cover;
    overflow: hidden;
    font-family: 'Nanum Pen Script', cursive;
    font-size: 33px;
    font-weight:500;
}

.topnav a {
    float: left; 
    color: #f2f2f2;
    text-align: center;
    padding: 33px 45px 33px 45px;
    text-decoration: none;
}

.topnav a:hover {
    background-color: #ddd;
    color: black;
}

.registarea{
    float: right;
    font-size: 33px;
}

.topnav a.active {
    background-color: #5e340dab;
    color: white;
}

.dropdown {
    float: left;
    overflow: hidden;
}

.dropdown .dropbtn {
    font-size: 33px;  
    border: none;
    outline: none;
    color: white;
    padding: 33px 45px 33px 45px;
    background-color: inherit;
    font-family: inherit;
    text-align: center;
}

.dropbtn:hover {
    background-color: #ddd;
    color: black;
}

.dropdown-community {
    display: none;
    position: absolute;
    background-color: #f9f9f9;
    min-width: 160px;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    z-index: 1;
}

.dropdown-community a {
    float: none;
    font-size: 25px;
    color: black;
    padding: 18px 28px;
    text-decoration: none;
    display: block;
    text-align: center;
}

.dropdown-community a:hover {
    background-color: #ddd;
}

.dropdown:hover .dropdown-community {
    display: block;
}
</style>
</head>
<body>
    <div class="topnav">
        <a class="active" href="/"> Latte's </a>
        <a href="/about">About</a>
        <div class="dropdown">
            <button class="dropbtn">Games</button>
            <div class="dropdown-community">
                <a href="/cafedefence">Cafe Defence</a>
                <a href="/coffeetail">Coffee Tail</a>
                <a href="/dodgeit">Dodge It!</a>
                <a href="/skycoffee">Sky Coffee</a>
            </div>
        </div> 
        <a href="/ranking">랭킹</a>
        <div class="dropdown">
            <button class="dropbtn">커뮤니티</button>
            <div class="dropdown-community">
                <a href="/freeboard">자유게시판</a>
                <a href="/wordchain">끝말잇기</a>
                <a href="/gamereview">게임후기</a>
            </div>
        </div> 
        <a href="/chat">문의</a>
        <div class="registarea" >
            <%if(loginInfo.user_id==1){%>
                <a href="/loginform" id="noId">로그인/회원가입</a>
            <%}else{%>
                <a href="/logout"><%=loginInfo.user_name%>/로그아웃</a>
            <%}%>
        </div>
    </div>
</body>
